---
interface Props {
  title: string;
  description: string;
  count?: number;
  countLabel?: string;
}

const { title, description, count, countLabel } = Astro.props;
---

<div class="mb-16 max-w-4xl">
  <h1 class="text-5xl font-bold mb-6 uppercase text-primary">
    {title}
  </h1>
  <p class="text-xl text-base-content/80 leading-relaxed">
    {description}
  </p>
  {count !== undefined && countLabel && (
    <div class="flex items-center gap-4 mt-6">
      <span class="px-4 py-2 bg-primary/10 border border-primary/30 text-primary rounded-lg text-sm font-medium">
        {count} {count === 1 ? countLabel.replace(/s$/, "") : countLabel}
      </span>
    </div>
  )}
</div>
