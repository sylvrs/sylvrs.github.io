---
import Layout from "../layouts/Layout.astro";
import config from "../data/config";
import { CatIcon } from "lucide-solid";
---

<Layout title={`404 - Page Not Found | ${config.name}`} description="This page could not be found.">
  <main class="container mx-auto px-4 pt-32 pb-12 min-h-screen flex items-center justify-center">
    <div class="max-w-2xl mx-auto text-center">
      <div class="mb-8">
        <CatIcon size={240} class="inline-block text-primary animate-bounce" />
        <h1 class="text-9xl font-bold mb-4">
          <span class="gradient-text">404</span>
        </h1>
        <h2 class="text-3xl font-bold text-base-content mb-4">Page Not Found</h2>
        <p class="text-lg text-base-content/80 mb-8">
          Oops! That page does not exist! Maybe the page was moved? Removed?
          Never existed? Or you just spelled something wrong.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/"
          class="px-8 py-4 border-2 border-primary text-primary rounded-lg font-bold hover:bg-primary hover:text-base-300 transition-all hover:scale-105 hover:shadow-lg hover:shadow-primary/50"
        >
          ‚Üê Back to Home
        </a>
      </div>
    </div>
  </main>
</Layout>
